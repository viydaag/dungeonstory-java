<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="dungeonstory-hsql">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem:test;sql.syntax_mys=true" />
      		<property name="javax.persistence.jdbc.user" value="sa" />
      		<property name="javax.persistence.jdbc.password" value="" />
		
			<property name="eclipselink.logging.level" value="FINE" />
			<property name="eclipselink.ddlgen-terminate-statements" value="true" />
			<!-- property name="eclipselink.ddl-generation" value="create-or-extend-tables" /-->
			<!-- property name="eclipselink.ddl-generation" value="drop-and-create-tables" /-->
			<property name="eclipselink.ddl-generation" value="create-tables" />
			<property name="eclipselink.ddl-generation.output-mode" value="both" />
			<!-- property name="eclipselink.ddl-generation.output-mode" value="database" /-->
		</properties>
	</persistence-unit>
	
	<persistence-unit name="dungeonstory-mysql">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
			<property name="eclipselink.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/dungeon_story_java" />
			<property name="eclipselink.jdbc.user" value="root" />
			<property name="eclipselink.jdbc.password" value="root" />
	
			<property name="eclipselink.logging.level" value="FINE" />
			<property name="eclipselink.ddlgen-terminate-statements" value="true" />
			<!-- property name="eclipselink.ddl-generation" value="create-or-extend-tables" /-->
			<property name="eclipselink.ddl-generation" value="drop-and-create-tables" />
			<!-- property name="eclipselink.ddl-generation" value="create-tables" /-->
			<property name="eclipselink.ddl-generation.output-mode" value="both" />
		</properties>
	</persistence-unit>

</persistence>